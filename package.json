{
	"name": "hono-first",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsx watch app/index.ts",
		"build": "tsc && tsx scripts/sync-deps.ts",
		"postbuild": "cross-zip dist ulti_ido_node.zip",
		"start": "node dist/app/index.js",
