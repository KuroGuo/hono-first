	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"@vitest/coverage-v8": "^1.4.0",
		"cross-zip-cli": "^1.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-drizzle": "^0.2.3",
		"globals": "^16.3.0",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
